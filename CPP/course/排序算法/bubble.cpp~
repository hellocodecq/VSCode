#include <iostream>
using namespace std;

void bubble_sort(int arr[], int len) {
	int i, j, temp;
	for (i = 0; i < len - 1; i++)
                for (j = 0; j < len - 1 - i; j++){
                        if (arr[j] > arr[j + 1]) {
	                        temp = arr[j];										                                arr[j] = arr[j + 1];
				arr[j + 1] = temp;
			}
			for (int i=0;i<len;i++){
				cout << arr[i] << " ";
			}
			cout << endl;
}
}


int main() {
       int arr[] = { 7,4,2,5,1 };
       cout << "7 4 2 3 5" << endl;
       int len = 5;
       bubble_sort(arr, len);
       int i;
       for (i = 0; i < len; i++)
             printf("%d ", arr[i]);
       return 0;
}
